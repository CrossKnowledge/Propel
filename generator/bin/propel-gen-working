#!/usr/bin/env bash

if [ -z "$PROPEL_GEN_HOME" ] ; then
    # try to find Propel
    if [ -d /opt/propel/generator ] ; then
        PROPEL_GEN_HOME=/opt/propel/generator
    fi

    if [ -d "${HOME}/opt/propel/generator" ] ; then
        PROPEL_GEN_HOME="${HOME}/opt/propel/generator"
    fi

    if [ -d "/usr/local/propel/generator" ] ; then
        PROPEL_GEN_HOME="/usr/local/propel/generator"
    fi

    if [ -d "${HOME}/usr/propel/generator" ] ; then
        PROPEL_GEN_HOME="${HOME}/usr/propel/generator"
    fi

    ## resolve links - the script name may be a link to phing's home
    SOURCE="${BASH_SOURCE[0]}"
    PRG="$( dirname "$SOURCE" )"
    while [ -h "$SOURCE" ]
    do
        SOURCE="$(readlink "$SOURCE")"
        [[ $SOURCE != /* ]] && SOURCE="$PRG/$SOURCE"
        PRG="$( cd -P "$( dirname "$SOURCE"  )" && pwd )"
    done
    PRG="$( cd -P "$( dirname "$SOURCE" )" && pwd )"

    if [ -d "`dirname $PRG`" ] ; then
        PROPEL_GEN_HOME="`dirname $PRG`"
    fi

    export PROPEL_GEN_HOME
fi

#if [ -f "$PROPEL_GEN_HOME/bin/phing.php" ] ; then
    #export PHING_COMMAND="$PROPEL_GEN_HOME/bin/phing.php"
#fi
#if [ -f "$PROPEL_GEN_HOME/vendor/bin/phing" ]; then
    #export PHING_COMMAND="php $PROPEL_GEN_HOME/vendor/bin/phing"
#fi

#if [ -z "$PHING_COMMAND" ] ; then
    #export PHING_COMMAND="phing"
#fi
if [ -z "$PHING_COMMAND" ]; then
    if [ -x "$PROPEL_GEN_HOME/../vendor/bin/phing" ]; then
        export PHING_COMMAND="$PROPEL_GEN_HOME/../vendor/bin/phing"
    else
        echo "$PROPEL_GEN_HOME"
        echo "❌ ERROR: Could not find phing. Please ensure it is installed via Composer." >&2
        exit 1
    fi
fi

# Handle different argument patterns
if [ $# -eq 0 ] ; then
    # No arguments - just run phing
    "$PHING_COMMAND" -f "$PROPEL_GEN_HOME/build.xml" -Dusing.propel-gen=true
elif [ $# -eq 1 ] ; then
    # One argument - could be either a target or a directory
    if [ -d "$1" ] ; then
        # It's a directory, use it as project.dir with default target
        "$PHING_COMMAND" -f "$PROPEL_GEN_HOME/build.xml" -Dusing.propel-gen=true -Dproject.dir="$1"
    else
        # It's a target, use current directory as project.dir
        "$PHING_COMMAND" -f "$PROPEL_GEN_HOME/build.xml" -Dusing.propel-gen=true -Dproject.dir="." -Dtarget="$1"
    fi
else
    # Two or more arguments - first is directory, second is target
    PROJECT_DIR="$1"
    TARGET="$2"
    shift 2
    # Pass any remaining arguments as additional phing options
    "$PHING_COMMAND" -f "$PROPEL_GEN_HOME/build.xml" -Dusing.propel-gen=true -Dproject.dir="$PROJECT_DIR" -Dtarget="$TARGET" "$@"
fi